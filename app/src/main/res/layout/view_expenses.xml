<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/expenses_price_tv"
        android:textSize="36sp"
        android:textColor="#ff23aa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/expenses_name_tv"
        android:textSize="24sp"
        android:textColor="#7711aa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
            android:id="@+id/expenses_date_tv"
            android:textSize="24sp"
            android:textColor="#7711aa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/expenses_remarks_tv"
        android:textSize="24sp"
        android:textColor="#7711aa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/expenses_edit_b"
            android:text="Edit"
            android:layout_weight="3"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/expenses_delete_b"
            android:text="Delete"
            android:layout_weight="3"
            />
    </LinearLayout>

</LinearLayout>