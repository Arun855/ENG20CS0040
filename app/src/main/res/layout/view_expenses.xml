<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/expense_ll">
        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:layout_marginHorizontal="15dp"
            card_view:contentPadding="1dp"
            card_view:cardElevation="0dp"
            card_view:cardBackgroundColor="#55ffffff"
            card_view:cardCornerRadius="10dp">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="9dp"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="09dp"
                        android:src="@drawable/ic_rupee_indian2" />
                    <TextView
                        android:id="@+id/expenses_price_tv"
                        android:textSize="36sp"
                        android:textColor="#ff23aa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="15dp"
                        android:layout_marginBottom="10dp"/>
                    <EditText
                        android:id="@+id/expenses_price_et"
                        android:textSize="36sp"
                        android:textColor="#ff23aa"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:background="@android:color/transparent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="15dp"
                        android:singleLine="true"
                        android:layout_marginBottom="10dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textSize="24sp"
                        android:textColor="#7711aa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="15dp"
                        android:gravity="left"
                        android:text="Item"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/expenses_name_tv"
                        android:textSize="24sp"
                        android:textColor="#7711aa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="15dp"
                        android:gravity="right"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"/>
                    <EditText
                        android:id="@+id/expenses_name_et"
                        android:textSize="24sp"
                        android:textColor="#7711aa"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:background="@android:color/transparent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="15dp"
                        android:gravity="right"
                        android:singleLine="true"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"/>
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textSize="24sp"
                    android:textColor="#7711aa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:gravity="left"
                    android:text="Date"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"/>
                <TextView
                            android:id="@+id/expenses_date_tv"
                            android:textSize="24sp"
                            android:textColor="#7711aa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                        android:paddingBottom="15dp"
                        android:gravity="right"
                        android:layout_marginBottom="10dp"
                    android:layout_weight="1"/>
                    <EditText
                        android:id="@+id/expenses_date_et"
                        android:textSize="24sp"
                        android:textColor="#7711aa"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:background="@android:color/transparent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="15dp"
                        android:gravity="right"
                        android:singleLine="true"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textSize="24sp"
                    android:textColor="#7711aa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:gravity="left"
                    android:text="Remarks"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"/>
                <TextView
                        android:id="@+id/expenses_remarks_tv"
                        android:textSize="24sp"
                        android:textColor="#7711aa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="15dp"
                        android:gravity="right"
                        android:layout_marginBottom="10dp"
                    android:layout_weight="1"/>
                    <EditText
                        android:id="@+id/expenses_remarks_et"
                        android:textSize="24sp"
                        android:textColor="#7711aa"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:background="@android:color/transparent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="15dp"
                        android:gravity="right"
                        android:singleLine="true"
                        android:imeOptions="actionDone"
                        android:nextFocusForward="@+id/expenses_save_b"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"/>
            </LinearLayout>

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"

                    >


                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/expenses_edit_b"
                            android:text="Edit"
                            android:layout_weight="1"
                            android:textColor="#444444"
                            android:textSize="16dp"
                            android:layout_marginBottom="3dp"
                            android:background="@drawable/round"
                            android:layout_marginRight="4dp"
                            />
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/expenses_save_b"
                            android:text="Save"
                            android:textSize="16dp"
                            android:visibility="gone"
                            android:layout_weight="1"
                            android:textColor="#444444"
                            android:layout_marginBottom="3dp"
                            android:background="@drawable/round"
                            android:layout_marginRight="4dp"
                            />
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/expenses_delete_b"
                            android:text="Delete"
                            android:textSize="16dp"
                            android:layout_weight="1"
                            android:textColor="#444444"
                            android:layout_marginBottom="3dp"
                            android:background="@drawable/round"
                            android:layout_marginLeft="4dp"
                            android:imeOptions="actionDone"
                            />
                    </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
