<FrameLayout
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".myblog.MyBlogActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >


        <ImageView
            android:layout_width="30dp"
            android:layout_weight="0.1"
            android:src="@drawable/ic_favorite_no_24dp"
            android:id="@+id/blog_fav_select_no"
            android:layout_gravity="right"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="55dp"
            android:layout_marginBottom="15dp"
            android:layout_height="30dp" />
        <ImageView
            android:layout_width="30dp"
            android:layout_weight="0.1"
            android:visibility="invisible"
            android:layout_gravity="right"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="55dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/ic_favorite_no_24dp"
            android:tint="#b81b47"
            android:id="@+id/blog_fav_select_yes"
            android:layout_height="30dp" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="15dp"
            card_view:cardBackgroundColor="#55ffffff"
            card_view:cardCornerRadius="10dp"
            card_view:cardElevation="0dp"
            card_view:contentPadding="1dp">


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="9dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="7dp"
                    android:layout_marginTop="7dp"
                    android:gravity="center_horizontal"
                    android:paddingBottom="15dp"
                    android:text="My Blog"
                    android:textSize="30sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="63dp"/>



    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:paddingVertical="7dp"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_weight="8"
            app:cardBackgroundColor="#ffffff"
            android:layout_marginLeft="7dp"
            app:cardCornerRadius="25dp"
            android:layout_gravity="left"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="0dp"
                    android:layout_marginHorizontal="7dp"
                    android:background="#00ffffff"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:textSize="20dp"
                    android:focusedByDefault="true"
                    android:id="@+id/et_blog_description"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"/>
                <ImageView
                    android:layout_width="0dp"
                    android:src="@drawable/ic_add_48"
                    android:tint="@color/colorPrimaryDT"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_gravity="bottom"
                    android:id="@+id/button_create"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginHorizontal="7dp"
            app:fabCustomSize="45dp"
            android:src="@drawable/ic_send_24dp"
            app:backgroundTint="@color/colorPrimaryDT"/>
    </LinearLayout>


</FrameLayout>
